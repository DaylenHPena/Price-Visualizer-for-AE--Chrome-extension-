{
    "name": "Price Visualizer for Aliexpress",
    "description": "Bigger images for product variants and each one price display",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": ["storage", "activeTab", "scripting"],
    "content_scripts": [
        {
          "matches": ["https://*.aliexpress.us/item/*"],
          "css": ["bigger_images.css"],
          "js": ["bigger.js"]
        }
      ],
    "icons": {
        "16": "/images/get_started16.png",
        "32": "/images/get_started32.png",
        "48": "/images/get_started48.png",
        "128": "/images/get_started128.png"
    }
}